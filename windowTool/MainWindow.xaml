<Window x:Class="windowTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:windowTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="100" Width="100" Content="Reduire" Margin="5,0" Click="Button_Click"></Button>
            <Button Height="100" Width="100" Content="Agrandir" Margin="5,0" Click="Button_Click_1"></Button>
            <Button Height="100" Width="100" Content="Fermer" Margin="5,0" Click="Button_Click_2"></Button>
        </StackPanel>
    </Grid>
</Window>
